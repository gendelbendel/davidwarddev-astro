---
import Link from "../Link.astro";
const { identity } = Astro.props;
---

<div>
  <h2>Who I am</h2>
  <ul>
    <li>My name is {identity.firstName}.</li>
    <li>I am a citizen of {identity.citizenOf}.</li>
    <li>
      I currently live in {identity.city}, {identity.state}, {identity.country}.
    </li>
    <li>I work as a {identity.occupation}.</li>
  </ul>
  <p>Find my resume <Link href={identity.resumeLink}>here.</Link></p>
</div>
