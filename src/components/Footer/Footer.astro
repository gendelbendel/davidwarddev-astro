---
import Social from "../UI/Social.astro";
import DateFormat from "../DateFormat.astro";
import { identity } from "../../data/me.json";
---

<footer>
  <div class="socials">
    <Social platform="github" username={identity.github} />
    <Social platform="linkedIn" username={"in/" + identity.linkedin} />
    <Social platform="rss" overrideUrl={Astro.url.origin + "/rss.xml"} />
  </div>
  <p>
    Copyright Â© <DateFormat date={new Date()} formatString="yyyy" />
    {identity.firstName}
    {identity.lastName}
  </p>
</footer>
